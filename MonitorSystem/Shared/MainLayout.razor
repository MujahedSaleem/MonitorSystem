@using Blazored.Toast.Configuration
@inherits LayoutComponentBase
<BlazoredToasts Position="ToastPosition.BottomLeft" />

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">

        <div class="top-row px-4 auth">
            <LoginDisplay/>
        </div>

        <div class="content px-4">

            <AuthorizeView>
                <Authorized>
                    @Body
                </Authorized>
                <NotAuthorized>
                    <RedirectToLogin></RedirectToLogin>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</div>
